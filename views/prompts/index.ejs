<% include ../partials/header_partial.ejs %>

			<% for (var i = 0; i < prompts.length; i++) { %>

			<div class="prompt-listitem">

				<h3><a href="/prompts/<%= prompts[i].id %>"><%= prompts[i].promptBody %></a></h3>

				<!-- <span>Submitted 5 hours ago by user</span> -->
			</div>
			<% } %>


			<!-- HIDE NEW PROMPT FORM IF USER IS NOT LOGGED IN -->
			<% if (locals.login) { %>

			<div id="newprompt-container">

				<!-- ADDS NEW PROMPT -->
				<form action="/prompts/newprompt" method="POST" id="newprompt">
					<textarea form="newprompt" name="promptBody"></textarea>
					<input type="submit" value="Post">
				</form>
			</div>

			<% } %>


		</div> <!-- closes content-container div -->

	</div> <!-- closes super-container div -->

</body>
</html>
